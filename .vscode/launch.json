{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Start Watching",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "watch"
        ],
        "restart": true,
        "sourceMaps": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "preLaunchTask": "Build",
      }
    ]
  }
